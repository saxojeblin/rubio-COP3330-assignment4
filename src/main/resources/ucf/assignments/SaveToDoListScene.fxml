<AnchorPane prefHeight="430.0" prefWidth="650.0" style="-fx-background-color: #D0D0D0;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.FXMLController">
   <children>
      <Text layoutX="104.0" layoutY="64.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Please enter a file name to save to-do list:">
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      <TextField fx:id="fileNameTextField" alignment="CENTER" focusTraversable="false" layoutX="180.0" layoutY="86.0" prefHeight="25.0" prefWidth="290.0" promptText="insert file name here" style="-fx-border-color: #000; -fx-background-color: #ECE9E9;">
         <font>
            <Font size="14.0" />
         </font></TextField>
      <Button layoutX="104.0" layoutY="202.0" mnemonicParsing="false" onAction="#cancelSaveToDoList" prefHeight="65.0" prefWidth="130.0" style="-fx-background-color: #FA5349; -fx-border-color: #000000;" text="Cancel">
         <font>
            <Font size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button layoutX="415.0" layoutY="202.0" mnemonicParsing="false" onAction="#submitSaveToDoList" prefHeight="65.0" prefWidth="130.0" style="-fx-background-color: #37B958; -fx-border-color: #000000;" text="Save">
         <font>
            <Font size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Label fx:id="fileNameErrorLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="64.0" layoutY="133.0" prefHeight="17.0" prefWidth="522.0" textAlignment="CENTER" textFill="RED">
         <font>
            <Font size="14.0" />
         </font></Label>
      <Text layoutX="22.0" layoutY="369.0" strokeType="OUTSIDE" strokeWidth="0.0" text="**Important Note: You may need to close the application to view the created file.">
         <font>
            <Font size="17.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
